<?xml version="1.0" encoding="utf-8"?>
<!-- Linear Layout for single list item -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/version_mag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/_8_9"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/version_place"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/new_york"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/version_placedetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/new_york"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/version_date"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/feb_14_2009"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/version_time"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/_3_00_pm"
        android:layout_height="wrap_content"
        android:textSize="16sp" />
</LinearLayout>